@model IEnumerable<ms17.DAL.Photo>

<div class="container">
    <div class="row">


        @foreach (var item in Model)
        {

            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                <h3>"@item.Title"</h3>

                @if (item.PhotoFile != null)
                {
                    <img class="img-rounded img-responsive" src="@Url.Action("GetImage", "Photo", new { id = item.PhotoID })" />
                }

                <div class="photo-metadata">

                    <div>
                        <span class="display-label">
                            Created By:
                        </span>
                        <span class="display-field">
                            @Html.DisplayFor(model => item.UserName)
                        </span>
                    </div>

                    <div>
                        <span class="display-label">
                            Created On:
                        </span>
                        <span class="display-field">
                            @Html.DisplayFor(model => item.CreatedDate)
                        </span>
                    </div>

                </div>

                @Html.ActionLink("Display", "Display", new { id = item.PhotoID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PhotoID }, new { @class = "btn btn-primary" })

            </div>
        }
    </div>


</div>